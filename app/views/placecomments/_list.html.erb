<h3>Comments:</h3>

<ul>
	<% @place.placecomments.each do |placecomment| %>
	<li class="comment">
		<p class="user_comment"><%=h placecomment.user.login %></p>
		<p class="date_comment"><%=h placecomment.date %></p>

		<p><%=h placecomment.comment %></p>

		<% if current_user.id == placecomment.user_id %>
		<p class="links_comment">
			<%= link_to 'Edit', edit_placecomment_path(placecomment) %>
			<%= link_to 'Delete', placecomment, :confirm => 'Are you sure?', :method => :delete %>
		</p>
		<% end %>

	</li>
	<% end %>
</ul>

