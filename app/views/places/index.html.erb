<h2>What Are You Looking For?</h2>
<div class="search_form">
	<h3 id="title_tab_places">
		Places
	</h3>
	<div class="content-search">
		<% form_tag places_path, :method => 'get' do %> 
		<p class="search_class">
			<%= label_tag(:keywords_place, "Search for:") %> 
			<%= text_field_tag :keywords_place, params[:keywords] %>
		</p>
		<p class="example search_class">
			(eg.: restaurant, river, city, ...)
		</p>
		<p class="search_class">
			<%= label_tag(:country_id_place, "Select a country:") %> 
			<%= select_tag(:country_id_place, 
			'<option value=""> </option>
			<option value="1">Spain</option>
			<option value="2">Poland</option>
			<option value="3">France</option>
			<option value="4">Portugal</option>
			<option value="5">Italy</option>
			<option value="6">Holand</option>
			<option value="7">Chec Republic</option>
			<option value="8">Slovakia</option>
			<option value="9">Ucrania</option>
			<option value="10">Turkey</option>
			<option value="11">Greece</option>
			<option value="12">Germany</option>'	
			) %>
		</p>

		<p class="search_class">
			<%= check_box_tag(:caravanista_place) %>
			<%= label_tag(:caravanista_place, "Llevo caravana") %>	
			<%= check_box_tag(:autocaravanista_place) %>
			<%= label_tag(:autocaravanista_place, "Llevo autocaravana") %>
		</p>
		<p class="search_button search_class button">
			<%= submit_tag "Search!", :name => nil %>
		</p>
		<% end %>
	</div>
</div>

<%= render(:partial => "list") %>

<%= link_to 'New Place', new_place_path %> |
<%= link_to 'Back', places_path %>