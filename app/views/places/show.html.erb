<div class="search_form_small">
	<h3 id="title_tab_places_small">
		Places
	</h3>
	<div class="content-search_small">
		<% form_tag places_path, :method => 'get' do %> 
		<p>
			<%= label_tag(:keywords_place, "Search for:") %> 
			<%= text_field_tag :keywords_place, params[:keywords] %> (eg.: restaurant, river, city, ...)
		</p>
		<p>
			<%= label_tag(:country_id_place, "Select a country:") %> 
			<%= select_tag(:country_id_place, 
			'<option value=""> </option>
			<option value="1">Spain</option>
			<option value="2">Poland</option>
			<option value="3">France</option>
			<option value="4">Portugal</option>
			<option value="5">Italy</option>
			<option value="6">Holand</option>
			<option value="7">Chec Republic</option>
			<option value="8">Slovakia</option>
			<option value="9">Ucrania</option>
			<option value="10">Turkey</option>
			<option value="11">Greece</option>
			<option value="12">Germany</option>'	
			) %>

		</p>

		<p class="search_button_small button">
			<%= submit_tag "Search!", :name => nil %>
		</p>
		<% end %>

	</div>
</div>

<h1>
	<%=h @place.name %>
</h1>

