<h1>New routecomment</h1>

<% form_for(@newRoutecomment) do |f| %>
  <%= f.error_messages %>

  <p><input id="routecomment_route_id" name="routecomment[route_id]" type="hidden" value="<%=@route_id%>"/>

  <input id="routecomment_user_id" name="routecomment[user_id]" type="hidden" value="<%=@user_id%>"/></p>

  <p>
    <%= f.label :comment %><br />
    <%= f.text_area :comment %>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', routecomments_path %>

