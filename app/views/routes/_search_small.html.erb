<div class="search_form_small">
	<h3 id="title_tab_search_small">
		Find more
	</h3>
	<div class="content-search_small">
		<% form_tag(search_path, :method => "get") do %>	
		<p>
			<%= label_tag(:keywords_search, "Search for:") %> 
			<%= text_field_tag :keywords_search, params[:keywords] %>
		</p>
		<p>
			<%@countries = Country.find(:all) %>
			<%= label_tag(:country_id, "Select a country:") %> 
			<%= select_tag :country_id, options_from_collection_for_select(@countries, 'id', 'name')%>
		</p>

		<p id="checkbox">
			<%= label_tag(:search_p, "Search in Places") %>	
			<%= check_box_tag(:search_p) %>
			<%= label_tag(:search_r, "Search in Routes") %>
			<%= check_box_tag(:search_r) %>
		</p>

		<p class="search_button_small button">
			<%= submit_tag "Search!", :name => nil %>
		</p>
		<% end %>

	</div>
</div>