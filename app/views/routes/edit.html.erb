<h1>Editing route</h1>

<div id="form_fields">
<% form_for(@route) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p class="button">
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @route %> |
<%= link_to 'Back', routes_path %>

</div>