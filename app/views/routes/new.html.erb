<h1>New route</h1>

<% if current_user %>

<div id="form_fields">
<% form_for(@route) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p class="button">
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', routes_path %>

</div>

<% else %>
<div id="form_fields">
	<p>You must be logged to add a new place.</p>
</div>
<% end %>