<div class="search_form_small">
	<h3 id="title_tab_routes_small">
		Routes
	</h3>
	<div class="content-search_small">
		<% form_tag routes_path, :method => 'get' do %> 
		<p>
			<%= label_tag(:keywords_route, "Search for:") %> 
			<%= text_field_tag :keywords_route, params[:keywords] %> (eg.: restaurant, river, city, ...)
		</p>
		<p>
			<%= label_tag(:country_id_route, "Select a country:") %> 
			<%= select_tag(:country_id_route, 
			'<option value=""> </option>
			<option value="1">Spain</option>
			<option value="2">Poland</option>
			<option value="3">France</option>
			<option value="4">Portugal</option>
			<option value="5">Italy</option>
			<option value="6">Holand</option>
			<option value="7">Chec Republic</option>
			<option value="8">Slovakia</option>
			<option value="9">Ucrania</option>
			<option value="10">Turkey</option>
			<option value="11">Greece</option>
			<option value="12">Germany</option>'	
			) %>

		</p>

		<p class="search_button_small button">
			<%= submit_tag "Search!", :name => nil %>
		</p>
		<% end %>

	</div>
</div>

<h1>
	<%=h @route.name %>
</h1>

<div id="summary">

	<h2>Route Summary</h2>
	<p>
		<b>Name:</b>
		<%=h @route.name %>
	</p>
	<p>
		<b>Author:</b>
		<%=h @route.author_id %>
	</p>
	<p>
		<b>Description:</b>
		<%=h @route.description %>
	</p>
	<p>
		<b>Places:</b>
		<%=h @route.places_id %>
	</p>
	<p>
		<b>Creation date:</b>
		<%=h @route.created_at %>
	</p>

	<p>
		<b>Last update:</b>
		<%=h @route.updated_at %>
	</p>
	<p>
		<b>Rating:</b>
		<%=h @route.rank %>
	</p>
	<p>
		Currently rating
	</p>
	<%= link_to 'Edit', edit_route_path(@route) %>
</div>

<img id="map" src="/images/map.png" alt="map" />

