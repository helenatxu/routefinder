<div id="log_in">


<% form_for @user_session, :url => user_session_path do |f| %>

<p class="login_class">
	<%= f.label :login %>
	<%= f.text_field :login %>
</p>
<br />
<p class="login_class">
	<%= f.label :password %>
	<%= f.password_field :password %>
</p>

<p id="remember_me">
	<%= f.check_box :remember_me %>
	<%= f.label :remember_me %>
</p>

<p id="button_login" class="login_class"><%= f.submit "Login" %></p>

<%= f.error_messages %>
<% end %>


</div>