<div id="log_in">


<% form_for @user_session, :url => user_session_path do |f| %>

<p class="login_class">
	<%= f.label :login %><br />
	<%= f.text_field :login %>
</p>

<p class="login_class">
	<%= f.label :password %><br />
	<%= f.password_field :password %>
</p>

<p>
	<%= f.check_box :remember_me %><%= f.label :remember_me %><br />
</p>

<p id="button_login1" class="login_class"><%= f.submit "Login" %></p>

<%= f.error_messages %>
<% end %>


</div>