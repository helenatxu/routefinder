<h1>Your Account</h1>
<div id="show_user_fields">
	<p>
		<b>Login:</b>
		<%=h @user.login %>
	</p>

	<p>
		<b>Login count:</b>
		<%=h @user.login_count %>
	</p>

	<p>
		<b>Last request at:</b>
		<%=h @user.last_request_at %>
	</p>

	<p>
		<b>Last login at:</b>
		<%=h @user.last_login_at %>
	</p>

	<p>
		<b>Current login at:</b>
		<%=h @user.current_login_at %>
	</p>

	<p>
		<b>Last login ip:</b>
		<%=h @user.last_login_ip %>
	</p>

	<p>
		<b>Current login ip:</b>
		<%=h @user.current_login_ip %>
	</p>

</div>

<p id="comeback_links">
<%= link_to 'Edit account', '/users/edit_account' %> |
<%= link_to 'Show Profile', '/users/show' %> |
<%= link_to 'Back', "/" %>
</p>